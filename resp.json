  "common_column_combination": [
    {
      "name": "debt_to_income_ratio",
      "description": "Calculates the ratio of annual debt (approximated from monthly installments) to annual income to assess borrower's repayment capacity.",
      "operation": {
        "source_columns": [
          "installment",
          "annual_inc"
        ],
        "expression": "(installment * 12) / annual_inc"
      }
    },
    {
      "name": "total_interest_paid",
      "description": "Calculates the total interest paid over the life of the loan by subtracting the original loan amount from the total payment.",
      "operation": {
        "source_columns": [
          "total_pymnt",
          "loan_amnt"
        ],
        "expression": "total_pymnt - loan_amnt"
      }
    }
  ],
  "common_column_cleaning_or_transformation": [
    {
      "name": "is_default",
      "description": "Create a binary flag for default status, mapping 'charged off' to 1 and 'fully paid' to 0 for modeling purposes.",
      "operation": {
        "type": "map",
        "source_column": "loan_status",
        "mapping": {
          "charged off": 1,
          "fully paid": 0,
          "current": -1
        }
      }
    },
    {
      "name": "income_group",
      "description": "Categorize annual income into descriptive bins for segmentation analysis.",
      "operation": {
        "type": "map_range",
        "source_column": "annual_inc",
        "ranges": [
          {
            "range": "0-40000",
            "label": "Low"
          },
          {
            "range": "40001-80000",
            "label": "Medium"
          },
          {
            "range": "80001-120000",
            "label": "High"
          },
          {
            "range": "120001-inf",
            "label": "Very High"
          }
        ]
      }
    },
    {
      "name": "loan_to_income_ratio",
      "description": "Calculate the ratio of the total loan amount to the borrower's annual income.",
      "operation": {
        "type": "math_op",
        "source_columns": [
          "loan_amnt",
          "annual_inc"
        ],
        "expression": "loan_amnt / annual_inc"
      }
    }
  ],
  "common_tasks": [
    {
      "name": "Analyze Default Rate by Loan Purpose",
      "task_id": 1,
      "description": "Group loans by their purpose to determine which categories have the highest number of charged-off loans.",
      "steps": [
        {
          "function": "filter",
          "column_name": "loan_status",
          "operator": "in",
          "values": [
            "charged off"
          ]
        },
        {
          "function": "groupby",
          "columns_to_group_by": [
            "purpose"
          ],
          "columns_to_aggregate": [
            "id"
          ],
          "calculation": [
            "count"
          ]
        }
      ],
      "score": "high"
    },
    {
      "name": "Compare Average Interest Rate for Different Home Ownership Statuses",
      "task_id": 2,
      "description": "Understand if there's a variation in the average interest rate offered to borrowers based on their home ownership status.",
      "steps": [
        {
          "function": "groupby",
          "columns_to_group_by": [
            "home_ownership"
          ],
          "columns_to_aggregate": [
            "int_rate"
          ],
          "calculation": [
            "mean"
          ]
        }
      ],
      "score": "medium"
    },
    {
      "name": "Identify Top 10 Largest Loans that were Fully Paid",
      "task_id": 3,
      "description": "Find the 10 largest loans that were successfully paid off to analyze characteristics of reliable high-value borrowers.",
      "steps": [
        {
          "function": "filter",
          "column_name": "loan_status",
          "operator": "in",
          "values": [
            "fully paid"
          ]
        },
        {
          "function": "get_top_or_bottom_N_entries",
          "sort_by_column_name": "loan_amnt",
          "order": "top",
          "number_of_entries": 10,
          "return_columns": [
            "id",
            "loan_amnt",
            "annual_inc",
            "purpose"
          ]
        }
      ],
      "score": "high"
    },
    {
      "name": "Calculate Overall Loan Status Proportions",
      "task_id": 4,
      "description": "Determine the percentage of loans that are fully paid, charged off, or current to get a high-level view of the portfolio's health.",
      "steps": [
        {
          "function": "get_proportion",
          "column_name": [
            "loan_status"
          ],
          "values": []
        }
      ],
      "score": "high"
    },
    {
      "name": "Analyze Average Annual Income for Defaulted vs. Paid Loans",
      "task_id": 5,
      "description": "Compare the average annual income of borrowers who defaulted versus those who fully paid their loans.",
      "steps": [
        {
          "function": "groupby",
          "columns_to_group_by": [
            "loan_status"
          ],
          "columns_to_aggregate": [
            "annual_inc"
          ],
          "calculation": [
            "mean",
            "median"
          ]
        }
      ],
      "score": "high"
    },
    {
      "name": "Examine Default Rates based on Income Verification Status",
      "task_id": 6,
      "description": "Assess if there is a difference in loan default rates between borrowers whose income was verified, source verified, or not verified.",
      "steps": [
        {
          "function": "groupby",
          "columns_to_group_by": [
            "verification_status",
            "loan_status"
          ],
          "columns_to_aggregate": [
            "id"
          ],
          "calculation": [
            "count"
          ]
        }
      ],
      "score": "high"
    },
    {
      "name": "Find the Total Amount Paid for Different Loan Terms",
