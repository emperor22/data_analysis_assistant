      ],
      "score": "high"
    },
    {
      "name": "Identify the 5 Riskiest Loans by Amount for Debt Consolidation",
      "task_id": 9,
      "description": "Find the top 5 largest charged-off loans that were taken for the purpose of debt consolidation.",
      "steps": [
        {
          "function": "filter",
          "column_name": "purpose",
          "operator": "in",
          "values": [
            "debt_consolidation"
          ]
        },
        {
          "function": "filter",
          "column_name": "loan_status",
          "operator": "in",
          "values": [
            "charged off"
          ]
        },
        {
          "function": "get_top_or_bottom_N_entries",
          "sort_by_column_name": "loan_amnt",
          "order": "top",
          "number_of_entries": 5,
          "return_columns": [
            "id",
            "loan_amnt",
            "int_rate",
            "annual_inc"
          ]
        }
      ],
      "score": "medium"
