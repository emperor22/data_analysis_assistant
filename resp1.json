            "type": "Numerical",
            "unit": "USD",
            "expected_values": [
                "0.0-12231.89"
            ]
        }
    ],
    "common_column_combination": [
        {
            "name": "loan_to_income_ratio",
            "description": "Calculates the ratio of the loan amount to the borrower's annual income, indicating financial leverage.",
            "operation": {
                "source_columns": [
                    "loan_amnt",
                    "annual_inc"
                ],
                "expression": "loan_amnt / annual_inc"
            }
        },
        {
            "name": "total_interest_paid",
            "description": "Calculates the total interest paid by subtracting the original loan amount from the total payment.",
            "operation": {
                "source_columns": [
                    "total_pymnt",
                    "loan_amnt"
                ],
                "expression": "total_pymnt - loan_amnt"
            }
        },
        {
            "name": "monthly_payment_to_income_ratio",
            "description": "Calculates the ratio of monthly loan installment to monthly annual income, indicating affordability.",
            "operation": {
                "source_columns": [
                    "installment",
                    "annual_inc"
                ],
                "expression": "(installment * 12) / annual_inc"
            }
        }
    ],
    "common_column_cleaning_or_transformation": [
        {
            "name": "annual_income_bracket",
            "description": "Categorizes annual income into predefined brackets for easier analysis.",
            "operation": {
                "type": "map_range",
                "source_column": "annual_inc",
                "ranges": [
                    {
                        "range": "0-30000",
                        "label": "Low Income"
                    },
                    {
                        "range": "30001-60000",
                        "label": "Medium Income"
                    },
                    {
                        "range": "60001-inf",
                        "label": "High Income"
                    }
                ]
            }
        },
        {
            "name": "loan_term_category",
            "description": "Groups loan terms into 'Short Term' or 'Long Term' categories.",
            "operation": {
                "type": "map",
                "source_column": "term",
                "mapping": {
                    "36": "Short Term",
                    "60": "Long Term"
                }
            }
        },
        {
            "name": "is_default",
            "description": "Creates a binary indicator for loan default status (1 for 'charged off', 0 otherwise).",
            "operation": {
                "type": "map",
                "source_column": "loan_status",
                "mapping": {
                    "charged off": 1,
                    "fully paid": 0,
                    "current": 0
                }
            }
        },
        {
            "name": "home_ownership_grouped",
            "description": "Groups less common home ownership types into an 'Other/Unknown' category.",
            "operation": {
                "type": "map",
                "source_column": "home_ownership",
                "mapping": {
                    "rent": "Rent",
                    "mortgage": "Mortgage",
                    "own": "Own",
                    "other": "Other/Unknown",
                    "none": "Other/Unknown"
                }
            }
        },
        {
            "name": "issue_months_ago",
            "description": "Converts the coded 'issue_d' into positive months representing how long ago the loan was issued.",
            "operation": {
                "type": "math_op",
                "source_columns": [
                    "issue_d"
                ],
                "expression": "issue_d * -1"
            }
        }
    ]
}